{
  "name": "lol-items",
  "version": "0.1.0",
  "description": "Simplified, up-to-date, League of Legends items list.",
  "author": "Nicolas Gryman <ngryman@gmail.com> (http://ngryman.sh)",
  "license": "MIT",
  "repository": "ngryman/lol-items",
  "main": "index.js",
  "files": [
    "dist",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint *.js",
    "spec": "babel-node test.js | tap-spec",
    "test": "npm run lint -s && npm run spec -s",
    "watch": "onchange {,**/}*.js -- npm test -s",
    "dist": "babel-node -e \"require('./')({ flat: true }).then((items) => require('fs').writeFileSync('dist/snapshot.json', JSON.stringify(items, 0, 2)))\"",
    "postinstall": "ln -nsf ../lib node_modules/lol-items",
    "prepublish": "mkdir -p dist; npm run dist -s"
  },
  "keywords": [
    "lol",
    "league",
    "legends",
    "items",
    "api"
  ],
  "dependencies": {
    "got": "^4.1.1",
    "object-values": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.19",
    "blue-tape": "^0.1.10",
    "eslint": "^0.24.0",
    "eslint-config-ngryman": "^0.2.0",
    "onchange": "^1.1.0",
    "tap-spec": "^4.0.2"
  }
}
